<!doctype html>
<html>
  <head>
    <title>{{ site.title }}</title>
    <meta charset="utf8" />
    <meta name="viewport" content="width=device-width" />
    <!-- @openlab/alembic inject-css -->
    <link rel="stylesheet" href="https://fonts.openlab.dev/inter/inter.css" />
    <link rel="stylesheet" href="assets/style.css" />
  </head>
  <body>
    <header class="hero">
      <img class="hero-background" src="assets/alperen-yazgi-QuP5RL_E5oE-unsplash-crop.jpg" />
      <div class="hero-brand" side="right">
        <center-layout gutters="var(--s0)">
          <cluster-layout
            justify="space-between"
            align="center"
            space="var(--s-1)"
          >
            <p class="wordmark">{{ site.title }}</p>
          </cluster-layout>
        </center-layout>
      </div>
    </header>
    <main>
      <center-layout>
        <section class="flow">
          {{ content | safe }}
        </section>
      </center-layout>
    </main>
    <footer> {{ site.title }} 2023 </footer>
    <!-- @openlab/alembic inject-js -->
  </body>
</html>
